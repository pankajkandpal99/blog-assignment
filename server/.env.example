# Application Environment (development|production|test)
NODE_ENV=development

# Server Port
PORT=8800

# JSON Web Token Secret (generate a strong secret)
JWT_SECRET=your_strong_jwt_secret_here

# MongoDB Connection URL
DATABASE_URL=mongodb://localhost:27017/dev_insight

# Cookie Domain (for production set to your domain, e.g., .yourdomain.com)
COOKIE_DOMAIN=localhost

# Allowed CORS Origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8800

# Base URL for API (used for generating absolute URLs)
BASE_URL=http://localhost:8800